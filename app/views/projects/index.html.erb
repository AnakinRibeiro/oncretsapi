<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
  <li class="breadcrumb-item"><a href="/dashboard<%=  %>">Smart Evehx</a></li>
    <li class="breadcrumb-item"><a href="/construction_details/<%= @construction.id %>"><%= @construction.name %></a></li>
    <li class="breadcrumb-item active">Projects</li>
  </ol>
</nav>

<p id="notice"><%= notice %></p>

<%= link_to 'New Project', new_construction_project_url(@construction.id), class: "btn mr-1 mb-1 btn-inverse" %>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Version</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.id %></td>
        <td><%= project.name %></td>
        <td><%= project.version %></td>
        <td><%= link_to 'Show File', (rails_blob_path(project.file, disposition: 'preview') rescue "#" ), class:"mb-1 btn btn-primary", target: :_blank %></td>
        <td><%= link_to 'Edit', edit_construction_project_path(@construction.id, project), class:"mb-1 btn btn-purple" %></td>
        <td><%= button_to construction_project_path(@construction.id, project), method: :delete, onClick: 'return confirm("Are you sure?");', class: "btn btn-danger" do %>Delete<% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
