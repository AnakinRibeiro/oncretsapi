<p id="notice"><%= notice %></p>

<h1>Activities Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities_types.each do |activities_type| %>
      <tr>
        <td><%= activities_type.name %></td>
        <td><%= link_to 'Show', activities_type %></td>
        <td><%= link_to 'Edit', edit_activities_type_path(activities_type) %></td>
        <td><%= link_to 'Destroy', activities_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

