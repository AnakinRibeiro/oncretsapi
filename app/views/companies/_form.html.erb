    <div class="card card-default">
  <div class="card-body">
    <%= form_with(model: company, local: true) do |form| %>
      <% if company.errors.any? %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= pluralize(company.errors.count, "error") %> prohibited this company from being saved:

          <ul>
            <% company.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name %>
      </div>

      <div class="form-group">
        <%= form.label :email %>
        <%= form.text_field :email %>
      </div>

      <div class="form-group">
        <%= form.label :document_number %>
        <%= form.text_field :document_number %>
      </div>

      <div class="form-group">
        <%= form.label :is_active %>
        <%= form.check_box :is_active %>
      </div>

        <%= form.fields_for :address do |address_form| %>
          <div class="form-group">
            <%= address_form.label :street %>
            <%= address_form.text_field :street %>
          </div>

          <div class="form-group">
            <%= address_form.label :number %>
            <%= address_form.text_field :number %>
          </div>

          <div class="form-group">
            <%= address_form.label :complement %>
            <%= address_form.text_field :complement %>
          </div>

          <div class="form-group">
            <%= address_form.label :district %>
            <%= address_form.text_field :district %>
          </div>

          <div class="form-group">
            <%= address_form.label :city %>
            <%= address_form.text_field :city %>
          </div>

          <div class="form-group">
            <%= address_form.label :state %>
            <%= address_form.text_field :state %>
          </div>

          <div class="form-group">
            <%= address_form.label :country %>
            <%= address_form.text_field :country %>
          </div>
        <% end %>

					<div id="phones">
						<%= form.fields_for :phones do |phones_form| %>
							<%= render partial: 'phone_fields', locals: { f: phones_form } %>
						<% end %>
						<%= link_to_add_association 'Add Phone', form, :phones %>
					</div>

      <div class="actions">
        <%= form.submit class:"btn btn-sm btn-secondary" %>
      </div>
    <% end %>
