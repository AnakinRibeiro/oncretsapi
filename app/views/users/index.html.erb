<p id="notice"><%= notice %></p>

<h1>Users</h1>

<% if can? :create, User %>
  <%= link_to 'New user', new_user_path, class: "btn mr-1 mb-1 btn-inverse" %>
<% end %>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.role.name %></td>
        <td><%= link_to 'Show', user, class:"mb-1 btn btn-primary" %></td>
        <% if can? :update, User %>
          <td><%= link_to 'Edit', edit_user_path(user), class:"mb-1 btn btn-purple" %></td>
        <% end %>
        <% if can? :delete, User %>
          <td><%= button_to user_path(user), method: :delete, onClick: 'return confirm("Are you sure?");', remote: true, class: "btn btn-danger" do %>Delete<% end %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

