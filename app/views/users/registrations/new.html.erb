
<div class="block-center mt-5 wd-xl">
  <%= render "devise/shared/error_messages", resource: resource %>
   <!-- START card-->
   <div class="card card-flat">
      <div class="card-header text-center bg-dark">
         <a href="#">
            <img class="block-center rounded" src="<%= image_path('angle/logo.png') %>" style="width: 80pt; padding: 5pt;" alt="Image" />
         </a>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class:"mb-3", novalidate:"novalidate") do |f| %>

      <div class="form-group">
          <div class="input-group with-focus">  
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control border-right-0", placeholder:"Enter email", required: true %>
            <div class="input-group-append">
                <span class="input-group-text text-muted bg-transparent border-left-0">
                    <em class="fa fa-envelope"></em>
                </span>
            </div>
          </div>
      </div>

      <div class="form-group">
          <div class="input-group with-focus">
            <%= f.password_field :password, autocomplete: "current-password", class:"form-control border-right-0", placeholder:"Password", required: true %>
            <div class="input-group-append">
                <span class="input-group-text text-muted bg-transparent border-left-0">
                    <em class="fa fa-lock"></em>
                </span>
            </div>
          </div>
      </div>

      <div class="form-group">
          <div class="input-group with-focus">
            <%= f.password_field :password_confirmation, autocomplete: "current-password", class:"form-control border-right-0", placeholder:"Password", required: true %>
            <div class="input-group-append">
                <span class="input-group-text text-muted bg-transparent border-left-0">
                    <em class="fa fa-lock"></em>
                </span>
            </div>
          </div>
      </div>

      <%= f.submit "Sign Up", class:"btn btn-block btn-primary mt-3" %>
    <% end %>
   </div>

   <%= render "devise/shared/links" %>
   <!-- END card-->
   <div class="p-3 text-center">
      <span class="mr-2">&copy;</span>
      <span><%= Time.now.year %></span>
      <span class="mr-2">-</span>
      <span>Evehx Elongations</span>
      <br/>
   </div>
</div>

