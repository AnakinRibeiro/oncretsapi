    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <%= pluralize(phone.errors.count, "error") %> prohibited this phone from being saved:

      <ul>
        <% phone.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
